@model IEnumerable<Web.Model.Signalement>

@{
    ViewBag.Title = "Index";
}

<div class="row retour">
    <a href="@Url.Action("Create")" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>Ajouter</a>
</div>
<div class="row result">
    <table class="table">
        <thead>
            <tr>
                <th>Date du signalement</th>
                <th>Dscription</th>
                <th>Adresse</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date_ajout.ToString("dd/MM/yyyy")</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Adresse)</td>
                </tr>
            }
        </tbody>
    </table>
